  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "build": "tsc",
    "server": "nodemon dist/main.js",
    "dev": "cross-env NODE_ENV=development concurrently \"yarn server\" \"yarn client\"",
    "watch-ts": "tsc -w",
